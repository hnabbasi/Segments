<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:d="http://xamarin.com/schemas/2014/forms/design" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:Segments;assembly=Segments"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true"
             mc:Ignorable="d"
             x:Class="Segments.MainPage"
             Title="Segments"
             BackgroundColor="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackLayout x:Name="MainStack"
                     Margin="20"
                     VerticalOptions="Center">
            <Label Text="Default !?" FontSize="Small" FontAttributes="Bold" Margin="0,10,0,0"/>
            <local:SegmentView x:Name="top"
                               SelectedIndexChanged="OnSegmentSelected">
                <local:SegmentView.Children>
                    <local:Segment Title="View A"/>
                    <local:Segment Title="View B"/>
                    <local:Segment Title="View C"/>
                </local:SegmentView.Children>
            </local:SegmentView>
            
            <Label Text="Corner Radius" FontSize="Small" FontAttributes="Bold" Margin="0,10,0,0"/>
            <local:SegmentView x:Name="top1"
                               TintColor="Purple"
                               CornerRadius="20">
                <local:SegmentView.Children>
                    <local:Segment Title="View A"/>
                    <local:Segment Title="View B"/>
                    <local:Segment Title="View C"/>
                </local:SegmentView.Children>
            </local:SegmentView>
            
            <Label Text="Border Color" FontSize="Small" FontAttributes="Bold" Margin="0,10,0,0"/>
            <local:SegmentView x:Name="top2"
                               TintColor="Purple"
                               CornerRadius="20"
                               BorderColor="Blue">
                <local:SegmentView.Children>
                    <local:Segment Title="View A"/>
                    <local:Segment Title="View B"/>
                    <local:Segment Title="View C"/>
                </local:SegmentView.Children>
            </local:SegmentView>
            
            <Label Text="Border Width" FontSize="Small" FontAttributes="Bold" Margin="0,10,0,0"/>
            <local:SegmentView x:Name="top3"
                               TintColor="Green"
                               CornerRadius="20"
                               BorderColor="Red"
                               BorderWidth="4">
                <local:SegmentView.Children>
                    <local:Segment Title="View A"/>
                    <local:Segment Title="View B"/>
                    <local:Segment Title="View C"/>
                </local:SegmentView.Children>
            </local:SegmentView>
        
            <!--<Label x:Name="ViewSelected"
                    Text="Select a segment"
                    FontSize="Small"
                    HorizontalTextAlignment="Center"/>-->
        
            <!--<StackLayout Orientation="Horizontal"
                            VerticalOptions="CenterAndExpand"
                            Margin="10">
                <Label Text="Unit"
                        VerticalTextAlignment="Center"
                        HorizontalOptions="FillAndExpand"/>
                <local:SegmentView HorizontalOptions="FillAndExpand">
                    <local:SegmentView.Children>
                        <local:Segment Title="C"/>
                        <local:Segment Title="F"/>
                    </local:SegmentView.Children>
                </local:SegmentView>
            </StackLayout>-->
        </StackLayout>
        <StackLayout BackgroundColor="Silver" Grid.Row="1" Padding="20">
            <StackLayout Orientation="Horizontal">
                <Label Text="Corner Radius"
                       VerticalTextAlignment="Center"/>
                <Label x:Name="CornerRadiusValue"
                       Text="Default"
                       FontSize="Small"
                       FontAttributes="Bold"
                       VerticalTextAlignment="Center"
                       HorizontalOptions="EndAndExpand"/>
                <Slider x:Name="CornerRadiusSlider"
                        Minimum="0"
                        Maximum="20"
                        ValueChanged="CornerRadiusChanged"
                        HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Tint Color"
                        VerticalTextAlignment="Center"
                        HorizontalOptions="FillAndExpand"/>
                <Picker x:Name="ColorPicker"
                        Title="Select color"
                        ItemDisplayBinding="{Binding Item1}"
                        SelectedIndexChanged="TintChanged"
                        HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Border Width"
                       VerticalTextAlignment="Center"/>
                <Label x:Name="BorderWidthValue"
                       Text="Default"
                       FontSize="Small"
                       FontAttributes="Bold"
                       VerticalTextAlignment="Center"
                       HorizontalOptions="EndAndExpand"/>
                <Stepper x:Name="BorderWidthStepper"
                         Minimum="0"
                         Maximum="10"
                         ValueChanged="OnBorderWidthChanged"/>
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>
